<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:columnCount="4"
    app:rowCount="3">

    <ImageView
        android:layout_width="@dimen/blogs_thumbnail_height"
        android:layout_height="@dimen/blogs_thumbnail_height"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="@dimen/blogs_thumbnail_margin"
        android:layout_marginBottom="@dimen/blogs_thumbnail_margin"
        android:id="@+id/imageView"
        app:layout_row="0"
        app:layout_rowSpan="3"
        app:layout_column="0"
        android:src="@drawable/ic_marker"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/blog_list_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_column="1"
        app:layout_row="0"
        app:layout_columnSpan="3"
        app:layout_gravity="fill"
        android:layout_marginLeft="@dimen/text_margin_side"
        android:layout_marginRight="@dimen/text_margin_side"
        android:layout_marginTop="@dimen/text_margin"
        android:layout_marginBottom="@dimen/text_margin"
        android:maxLines="2"
        android:textColor="@color/primary_text"
        android:textStyle="bold"
        android:textSize="22sp"
        android:scrollHorizontally="false"
        android:text="@string/empty_blogs_list_item_name" />

    <TextView
        android:id="@+id/blog_list_item_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_column="1"
        app:layout_row="1"
        app:layout_columnSpan="3"
        app:layout_gravity="fill"
        android:layout_marginLeft="@dimen/text_margin_side"
        android:layout_marginRight="@dimen/text_margin_side"
        android:maxLines="1"
        android:textColor="@color/primary_text"
        android:textStyle="italic"
        android:textSize="14sp"
        android:scrollHorizontally="false"
        android:text="@string/empty_blogs_list_item_desc" />

    <TextView
        android:id="@+id/blog_list_item_date"
        app:layout_column="1"
        app:layout_row="2"
        app:layout_columnSpan="3"
        app:layout_columnWeight="2"
        app:layout_gravity="fill"
        android:layout_marginLeft="@dimen/text_margin_side"
        android:layout_marginRight="@dimen/text_margin_side"
        android:layout_marginTop="@dimen/text_margin"
        android:layout_marginBottom="@dimen/text_margin"
        android:textColor="@color/secondary_text"
        android:textSize="14sp"
        android:text="@string/empty_blogs_list_item_date" />
</android.support.v7.widget.GridLayout>
